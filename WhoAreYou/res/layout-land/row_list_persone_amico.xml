<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ImageView_immagineAmici_Persone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/immagine_Amici_Persone"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >
    </ImageView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView_immagineAmici_Persone"
        android:layout_marginBottom="22dp"
        android:layout_toRightOf="@+id/ImageView_immagineAmici_Persone"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView_identificativoAmici_Persone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identificativo_Amici_Persone" />

        <TextView
            android:id="@+id/TextView_usernameAmici_Persone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_Amici_Persone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView_eliminaAmici_Persone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:clickable="true"
        android:contentDescription="@string/elimina_Amici_Persone"
        android:src="@drawable/ic_action_discard" />

</RelativeLayout>